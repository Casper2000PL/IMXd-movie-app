{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // Environment settings
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",

    // Output settings
    "declaration": true,
    "outDir": "./dist",
    "noEmit": false,

    // Module resolution
    "moduleResolution": "bundler",

    // Override root settings for shared
    "baseUrl": "./",
    "paths": {} // Clear inherited paths
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "../client/**/*", "../server/**/*"]
}
