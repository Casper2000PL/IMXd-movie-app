{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // Environment settings
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",

    // Types
    "types": ["bun-types"],

    // Output settings - Fixed to prevent conflicts
    "declaration": true,
    "outDir": "./dist", // Make sure it's relative to this config
    "noEmit": false,
    "emitDecoratorMetadata": true,

    // Module resolution
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,

    // Override root settings for server
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["../shared/src/*"],
      "@client/*": ["../client/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "../client/**/*", "../shared/**/*"]
}
